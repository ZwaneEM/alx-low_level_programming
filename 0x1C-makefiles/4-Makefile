CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAG = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

%.o:%.c
	$(CC) $(CFLAG) -c -o $@ $<

clean:
	$(RM) -rf *~ $(NAME)

oclean:
	$(RM) -rf $(OBJ)
	
fclean: clean oclean

re: fclean all
